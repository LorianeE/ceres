{
  "name": "@ceres/ceres",
  "private": true,
  "devDependencies": {
    "lerna": "^3.20.2"
  },
  "workspaces": {
    "packages": [
      "packages/*"
    ],
    "nohoist": [
      "**/@types",
      "**/@types/**",
      "**/@tsed",
      "**/@tsed/**"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "post-commit": "git update-index --again"
    }
  },
  "lint-staged": {
    "packages/client/src/**/*.{js,jsx}": [
      "cd packages/client && prettier --write && yarn lint:fix",
      "git add"
    ],
    "packages/server/**/*.{ts}": [
      "cd packages/server && prettier --write && yarn test:lint:fix",
      "git add"
    ]
  }
}
